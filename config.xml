<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dakidoki.game" version="4.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Agile Giraffe</name>
    <description>
        Eğlenceli mi eğlenceli zıplama oyunu
    </description>
    <icon src="www/img/icon.png" />
    <preference name="android-targetSdkVersion" value="30" />
    <preference name="fullscreen" value="true" />
    <preference name="KeepRunning" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashScreenSpinnerColor" value="#ffffff" />
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <splash platform="android" qualifier="port-xhdpi" src="www/img/splash.png" />
    <splash platform="android" qualifier="port-xxhdpi" src="www/img/splash.png" />
    <splash platform="android" qualifier="port-xxxhdpi" src="www/img/splash.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-admob-free" spec="~0.12.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <engine name="ios" spec="~4.5.5" />
</widget>
